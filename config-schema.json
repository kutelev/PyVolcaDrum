{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/product.schema.json",
  "type": "object",
  "properties": {
    "port": {
      "type": "string"
    },
    "controls": {
      "type": "object",
      "properties": {
        "parts": {
          "type": "object",
          "properties": {
            "part1": {
              "$ref": "#/$defs/part"
            },
            "part2": {
              "$ref": "#/$defs/part"
            },
            "part3": {
              "$ref": "#/$defs/part"
            },
            "part4": {
              "$ref": "#/$defs/part"
            },
            "part5": {
              "$ref": "#/$defs/part"
            },
            "part6": {
              "$ref": "#/$defs/part"
            }
          },
          "required": [
            "part1",
            "part2",
            "part3",
            "part4",
            "part5",
            "part6"
          ]
        }
      }
    },
    "timeline": {
      "type": "object",
      "properties": {
        "tracks": {
          "type": "object",
          "properties": {
            "step-count": {
              "type": "integer",
              "minimum": 16,
              "maximum": 1024
            },
            "tempo": {
              "type": "integer",
              "minimum": 60,
              "maximum": 360
            },
            "enabled-tracks": {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "integer",
                "minimum": 1,
                "maximum": 6
              }
            },
            "tracks": {
              "type": "object",
              "properties": {
                "track1": {
                  "$ref": "#/$defs/track-data"
                },
                "track2": {
                  "$ref": "#/$defs/track-data"
                },
                "track3": {
                  "$ref": "#/$defs/track-data"
                },
                "track4": {
                  "$ref": "#/$defs/track-data"
                },
                "track5": {
                  "$ref": "#/$defs/track-data"
                },
                "track6": {
                  "$ref": "#/$defs/track-data"
                }
              },
              "required": [
                "track1",
                "track2",
                "track3",
                "track4",
                "track5",
                "track6"
              ]
            }
          },
          "required": [
            "step-count",
            "tempo",
            "enabled-tracks",
            "tracks"
          ]
        }
      },
      "required": [
        "tracks"
      ]
    }
  },
  "required": [
    "port",
    "controls",
    "timeline"
  ],
  "$defs": {
    "control-value": {
      "type": "integer",
      "minimum": 0,
      "maximum": 127
    },
    "part": {
      "type": "object",
      "properties": {
        "layer2": {
          "type": "object",
          "properties": {
            "select": {
              "$ref": "#/$defs/control-value"
            },
            "level": {
              "$ref": "#/$defs/control-value"
            },
            "modulation-amount": {
              "$ref": "#/$defs/control-value"
            },
            "modulation-rate": {
              "$ref": "#/$defs/control-value"
            },
            "pitch": {
              "$ref": "#/$defs/control-value"
            },
            "envelope-generator-attack": {
              "$ref": "#/$defs/control-value"
            },
            "envelope-generator-release": {
              "$ref": "#/$defs/control-value"
            }
          },
          "required": [
            "select",
            "level",
            "modulation-amount",
            "modulation-rate",
            "pitch",
            "envelope-generator-attack",
            "envelope-generator-release"
          ]
        },
        "layer1": {
          "type": "object",
          "allOf": [
            {
              "$ref": "#/$defs/part/properties/layer2/properties",
              "properties": {
                "left-right-pan": {
                  "$ref": "#/$defs/control-value"
                },
                "send-amount": {
                  "$ref": "#/$defs/control-value"
                },
                "bit-reduction-amount": {
                  "$ref": "#/$defs/control-value"
                },
                "wave-folder-amount": {
                  "$ref": "#/$defs/control-value"
                },
                "overdrive-gain": {
                  "$ref": "#/$defs/control-value"
                },
                "pre-mix-gain-adjustment": {
                  "$ref": "#/$defs/control-value"
                }
              }
            }
          ],
          "required": [
            "select",
            "level",
            "modulation-amount",
            "modulation-rate",
            "left-right-pan",
            "pitch",
            "envelope-generator-attack",
            "envelope-generator-release",
            "send-amount",
            "bit-reduction-amount",
            "wave-folder-amount",
            "overdrive-gain",
            "pre-mix-gain-adjustment"
          ]
        }
      },
      "required": [
        "layer1"
      ]
    },
    "track-data": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "integer",
        "minimum": 1
      }
    }
  }
}
